# Application
APP_NAME=Contract Intelligence System
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/contract_intelligence
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=contract_intelligence

# LLM Provider Configuration (use either OpenAI or Gemini)
LLM_PROVIDER=gemini  # "openai" or "gemini"

# OpenAI API (optional - if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Google Gemini API (recommended - free tier available)
GEMINI_API_KEY=AIzaSyBnC2opyfph4DKUGtNbgEJDHtuxTpQliH0
GEMINI_MODEL=gemini-2.5-flash

# Embeddings
EMBEDDING_MODEL=text-embedding-3-small

# Vector Database
VECTOR_DB=chromadb
CHROMA_PERSIST_DIR=./data/chroma

# File Storage
UPLOAD_DIR=./data/uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Security
SECRET_KEY=your-secret-key-here
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Webhook
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_COUNT=3

# Metrics
ENABLE_METRICS=True
METRICS_PORT=9090

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_WORKERS=4
